{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./api/types"]
  },
  "include": ["db.ts", "services/**/*.ts", "utils/**/*.ts", "api/**/*.ts", "scripts/**/*.ts", "config/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
